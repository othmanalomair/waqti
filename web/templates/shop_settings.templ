                // Add event listeners to layout radio buttons
                const layoutRadios = document.querySelectorAll('input[name="store_layout"]');
                layoutRadios.forEach(radio => {
                    radio.addEventListener('change', updateLayoutSelection);
                });
            });
        </script>
