    </style>

    <script>
        // Initialize event listeners when modal loads
        document.addEventListener('DOMContentLoaded', function() {
            initializeURLModal();
        });

        // Initialize modal functionality
        function initializeURLModal() {
            // Copy button functionality
            document.querySelectorAll('.copy-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const textToCopy = this.getAttribute('data-copy-text');
                    copyToClipboard(textToCopy, this);
                });
            });
        }

        // Validation function for Alpine.js
        function validateUsernameInput() {
            // This function will be called in Alpine.js context
            const username = this.username.trim();
            if (username.length < 3) {
                this.validationResult = null;
                return;
            }

            this.isValidating = true;

            fetch('/url/validate', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ username: username })
            })
            .then(response => response.json())
            .then(result => {
                this.validationResult = result;
                this.isValidating = false;
            })
            .catch(() => {
                this.validationResult = {
                    is_valid: false,
                    error_message: 'Error validating username',
                    error_message_ar: 'Ø®Ø·Ø£ ÙÙŠ Ø§Ù„ØªØ­Ù‚Ù‚ Ù…Ù† Ø§Ø³Ù… Ø§Ù„Ù…Ø³ØªØ®Ø¯Ù…'
                };
                this.isValidating = false;
            });
        }

        // Copy to clipboard function
        function copyToClipboard(text, button) {
            navigator.clipboard.writeText(text).then(function() {
                // Show success feedback
                const originalTitle = button.title;
                button.title = 'Copied!';
                button.style.backgroundColor = '#2DD4BF';
                button.style.color = 'white';

                setTimeout(() => {
                    button.title = originalTitle;
                    button.style.backgroundColor = '';
                    button.style.color = '';
                }, 2000);
            }).catch(function() {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = text;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
            });
        }

        // Re-initialize when HTMX swaps content
        document.body.addEventListener('htmx:afterSwap', function(event) {
            if (event.detail.target && event.detail.target.id === 'edit-url-modal') {
                setTimeout(initializeURLModal, 100);
            }
        });

        // Make function available globally for Alpine.js
        window.validateUsernameInput = validateUsernameInput;
    </script>
}


