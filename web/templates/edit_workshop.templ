                        @drop.prevent="handleFileDrop($event)"
                        class="upload-area p-6 rounded-xl text-center cursor-pointer mb-4"
                    >
                        <div x-show="!form.uploading">
                            <svg class="w-12 h-12 text-gulf-teal mx-auto mb-3" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6zm4 18H6V4h7v5h5v11z"/>
                            </svg>
                            <p class="text-gulf-teal font-medium mb-1" x-text="lang === 'ar' ? 'انقر للتحميل أو اسحب الصور هنا' : 'Click to upload or drag images here'"></p>
                            <p class="text-xs text-gray-500" x-text="lang === 'ar' ? 'حد أقصى 3 صور، 2 ميجابايت لكل صورة' : 'Maximum 3 images, 2MB each'"></p>
                        </div>

                        <!-- Upload Progress -->
                        <div x-show="form.uploading" class="flex flex-col items-center">
                            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-gulf-teal mb-2"></div>
                            <p class="text-gulf-teal font-medium" x-text="lang === 'ar' ? 'جاري الرفع...' : 'Uploading...'"></p>
                        </div>

                        <input
                            type="file"
                            x-ref="fileInput"
                            @change="handleFileSelect($event)"
                            accept="image/*"
                            multiple
                        />
                    </div>

                    <!-- Image Previews -->
                    <div x-show="form.images.length > 0" class="grid grid-cols-1 gap-3">
                        <template x-for="(image, index) in form.images" :key="index">
                            <div class="image-preview relative">
                                <img :src="image.url" :alt="'Preview ' + (index + 1)" class="rounded-xl"/>

                                <!-- Cover Badge -->
                                <div
                                    x-show="form.coverImageIndex === index"
                                    class="absolute top-2 left-2 cover-badge text-white px-2 py-1 rounded-full text-xs font-medium"
                                    x-text="lang === 'ar' ? 'الغلاف' : 'Cover'"
                                ></div>

                                <!-- Actions -->
                                <div class="absolute top-2 right-2 flex space-x-1">
                                    <button
                                        @click="setCoverImage(index)"
                                        :class="form.coverImageIndex === index ? 'bg-white/30' : 'bg-black/30 hover:bg-black/50'"
                                        type="button"
                                        class="p-2 rounded-full text-white transition-colors"
                                        :title="lang === 'ar' ? 'تعيين كغلاف' : 'Set as cover'"
                                    >
                                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                                        </svg>
                                    </button>
                                    <button
                                        @click="removeImage(index)"
                                        type="button"
                                        class="p-2 bg-red-500/80 hover:bg-red-600 rounded-full text-white transition-colors"
                                        :title="lang === 'ar' ? 'حذف الصورة' : 'Remove image'"
                                    >
                                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </template>
                    </div>

                    <!-- Hidden fields for form submission -->
                    <template x-for="(image, index) in form.images" :key="index">
                        <input type="hidden" :name="'image_urls[]'" :value="image.url" />
                    </template>
                    <input type="hidden" name="cover_image_index" :value="form.coverImageIndex" />
                </div>

                <!-- Save Buttons -->
                <div class={ getSaveButtonLayout(isRTL) }>
                    <button
                        type="button"
                        @click="saveDraft()"
                        class="flex-1 py-4 bg-gray-100 text-gray-700 rounded-xl font-medium hover:bg-gray-200 transition-colors"
                    >
                        if lang == "ar" {
                            حفظ كمسودة
                        } else {
                            Save as Draft
                        }
                    </button>
                    <button
                        type="submit"
                        :disabled="!isFormValid()"
                        class="flex-1 py-4 bg-gulf-teal text-white rounded-xl font-medium hover:bg-teal-600 transition-colors disabled:bg-gray-300 disabled:cursor-not-allowed"
                    >
                        if lang == "ar" {
                            حفظ التغييرات
                        } else {
                            Save Changes
                        }
                    </button>
                </div>

                <!-- Bottom Spacing -->
                <div class="h-6"></div>
            </form>
        </main>

        <script>
        function editWorkshopForm() {
            return {
                form: {
                    name: '',
                    description: '',
                    price: 0,
                    isFree: false,
                    locationName: '',
                    locationLink: '',
                    showLocationFields: false,
                    maxStudents: 0,
                    isUnlimited: true,
                    status: 'draft',
                    workshopType: 'custom',
                    privateDuration: 2,
                    privateCapacity: 1,
                    privateIsUnlimited: false,
                    logicalSessions: [
                        {
                            id: 1,
                            time: '',
                            duration: 2,
                            capacity: 20,
                            isUnlimited: false,
                            dates: [],
                            singleDate: ''
                        }
                    ],
                    sessions: [], // Legacy - kept for form submission
                    images: [],
                    coverImageIndex: 0,
                    workshopId: '',
                    uploading: false,
                    consecutiveSettings: {
                        time: '',
                        duration: 2,
                        capacity: 20,
                        isUnlimited: false,
                        dates: []
                    },
                    consecutiveBlocks: [
                        {
                            id: 1,
                            time: '',
                            duration: 2,
                            capacity: 20,
                            isUnlimited: false,
                            fromDate: '',
                            toDate: '',
                            dates: []
                        }
                    ]
                },
                errors: {
                    name: false,
                    privateDuration: false,
                    privateCapacity: false,
                    sessions: []
                },
                lang: document.documentElement.lang,

                // Helper function to split dates into consecutive ranges
                splitIntoConsecutiveRanges(dates) {
                    if (!dates || dates.length === 0) return [];
                    
                    // Sort dates to ensure proper order
                    const sortedDates = dates.slice().sort();
                    
                    const ranges = [];
                    let currentRange = [sortedDates[0]];
                    
                    for (let i = 1; i < sortedDates.length; i++) {
                        const currentDate = new Date(sortedDates[i]);
                        const prevDate = new Date(sortedDates[i - 1]);
                        
                        // Check if dates are consecutive (1 day apart)
                        const dayDiff = (currentDate - prevDate) / (1000 * 60 * 60 * 24);
                        
                        if (dayDiff === 1) {
                            // Consecutive - add to current range
                            currentRange.push(sortedDates[i]);
                        } else {
                            // Not consecutive - finish current range and start new one
                            ranges.push(currentRange);
                            currentRange = [sortedDates[i]];
                        }
                    }
                    
                    // Add the last range
                    ranges.push(currentRange);
                    
                    return ranges;
                },

                init() {
                    // Load data from data attributes on the main container
                    const container = document.getElementById('workshop-container');
                    if (container) {
                        this.form.name = container.dataset.name || '';
                        this.form.description = container.dataset.description || '';
                        this.form.price = parseFloat(container.dataset.price) || 0;
                        this.form.isFree = container.dataset.isFree === 'true';
                        this.form.maxStudents = parseInt(container.dataset.maxStudents) || 0;
                        this.form.isUnlimited = this.form.maxStudents === 0;
                        this.form.status = container.dataset.status || 'draft';
                        this.form.workshopId = container.dataset.workshopId || '';
                        // Load workshop type from database instead of detecting
                        this.form.workshopType = container.dataset.workshopType || 'custom';
                        this.form.locationName = container.dataset.locationName || '';
                        this.form.locationLink = container.dataset.locationLink || '';
                        // Show location fields only if there's actual non-empty location data
                        this.form.showLocationFields = !!(this.form.locationName.trim() || this.form.locationLink.trim());

                        // Load sessions data from hidden session elements
                        const sessionElements = document.querySelectorAll('.session-data');
                        const rawSessions = [];

                        console.log('DEBUG: Workshop type:', this.form.workshopType);
                        console.log('DEBUG: Raw sessions loaded:', sessionElements);
                        console.log('DEBUG: Raw sessions count:', sessionElements.length);

                        sessionElements.forEach(element => {
                            const date = element.dataset.sessionDate;
                            const time = element.dataset.sessionTime;
                            const duration = parseFloat(element.dataset.sessionDuration);
                            const capacity = parseInt(element.dataset.sessionCapacity) || 20;
                            const sessionDates = element.dataset.sessionDates;

                            console.log('DEBUG: Raw session data:', {
                                date: date,
                                time: time,
                                duration: duration,
                                capacity: capacity,
                                sessionDates: sessionDates
                            });

                            if (date && time && duration) {
                                // Each database row represents one session with potentially multiple dates
                                let dates = [];
                                if (sessionDates && sessionDates.trim() !== '') {
                                    // Parse the session_dates JSON field
                                    dates = sessionDates.split(',').map(d => d.trim()).filter(d => d !== '');
                                } else {
                                    // Fallback to single date if session_dates is empty
                                    dates = [date];
                                }

                                rawSessions.push({
                                    date: date, // Primary date for compatibility
                                    time: time,
                                    duration: duration,
                                    capacity: capacity,
                                    isUnlimited: capacity === 0,
                                    dates: dates // All dates for this session
                                });
                            }
                        });

                        console.log('DEBUG: Raw sessions data:', rawSessions);

                        // Convert raw sessions to logical sessions (group by time, duration, capacity)
                        this.convertToLogicalSessions(rawSessions);
                        
                        console.log('DEBUG: Logical sessions after conversion:', this.form.logicalSessions);
                        console.log('DEBUG: Logical sessions count:', this.form.logicalSessions.length);
                        console.log('DEBUG: Consecutive blocks after conversion:', this.form.consecutiveBlocks);

                        // Load existing workshop images
                        this.loadExistingImages();
                    }
                },


                // Convert raw sessions to logical sessions structure
                convertToLogicalSessions(rawSessions) {
                    if (rawSessions.length === 0) {
                        return;
                    }

                    if (this.form.workshopType === 'consecutive') {
                        // For consecutive workshops, populate consecutiveBlocks
                        if (rawSessions.length > 0) {
                            // Group sessions by identical properties first
                            const propGroups = {};
                            rawSessions.forEach(session => {
                                const key = `${session.time}_${session.duration}_${session.capacity}_${session.isUnlimited}`;
                                if (!propGroups[key]) {
                                    propGroups[key] = {
                                        time: session.time,
                                        duration: session.duration,
                                        capacity: session.capacity,
                                        isUnlimited: session.isUnlimited,
                                        dates: []
                                    };
                                }
                                propGroups[key].dates.push(...session.dates);
                            });

                            // For each property group, detect consecutive date ranges
                            this.form.consecutiveBlocks = [];
                            let blockId = 1;
                            Object.values(propGroups).forEach(group => {
                                const sortedDates = group.dates.sort();
                                
                                // Split dates into consecutive ranges
                                const consecutiveRanges = this.splitIntoConsecutiveRanges(sortedDates);
                                
                                // Create separate blocks for each consecutive range
                                consecutiveRanges.forEach(dateRange => {
                                    const fromDate = dateRange[0];
                                    const toDate = dateRange[dateRange.length - 1];
                                    
                                    this.form.consecutiveBlocks.push({
                                        id: blockId++,
                                        time: group.time,
                                        duration: group.duration,
                                        capacity: group.capacity,
                                        isUnlimited: group.isUnlimited,
                                        fromDate: fromDate,
                                        toDate: toDate,
                                        dates: dateRange
                                    });
                                });
                            });
                        }
                        // Don't populate logicalSessions for consecutive - use consecutiveBlocks instead
                        this.form.logicalSessions = [];
                    } else if (this.form.workshopType === 'custom') {
                        // For custom workshops, each database row becomes one logical session with multiple dates
                        console.log('DEBUG: Converting custom workshop sessions...');
                        console.log('DEBUG: Raw sessions for custom:', rawSessions);
                        
                        this.form.logicalSessions = [];
                        let sessionId = 1;
                        
                        rawSessions.forEach(session => {
                            console.log('DEBUG: Processing raw session:', session);
                            
                            const logicalSession = {
                                id: sessionId++,
                                time: session.time,
                                duration: session.duration,
                                capacity: session.capacity,
                                isUnlimited: session.isUnlimited,
                                dates: session.dates || [session.date], // Use all dates from this database row
                                singleDate: session.dates && session.dates.length === 1 ? session.dates[0] : ''
                            };
                            
                            console.log('DEBUG: Created logical session:', logicalSession);
                            this.form.logicalSessions.push(logicalSession);
                        });
                    } else if (this.form.workshopType === 'private') {
                        // For private workshops, extract duration and capacity from the special session
                        this.form.logicalSessions = [];
                        this.form.consecutiveBlocks = [];
                        
                        if (rawSessions.length > 0) {
                            // Use the first session's duration and capacity for private workshop
                            const privateSession = rawSessions[0];
                            this.form.privateDuration = privateSession.duration || 2;
                            this.form.privateCapacity = privateSession.capacity || 1;
                            this.form.privateIsUnlimited = privateSession.isUnlimited || (privateSession.capacity === 0);
                            
                            console.log('DEBUG: Loaded private workshop data:', {
                                duration: this.form.privateDuration,
                                capacity: this.form.privateCapacity,
                                isUnlimited: this.form.privateIsUnlimited
                            });
                        }
                    } else {
                        // For single workshops, group by identical properties
                        const sessionGroups = {};
                        const sessionProps = {};

                        rawSessions.forEach(session => {
                            const key = `${session.time}_${session.duration}_${session.capacity}_${session.isUnlimited}`;
                            
                            if (!sessionGroups[key]) {
                                sessionGroups[key] = [];
                                sessionProps[key] = {
                                    time: session.time,
                                    duration: session.duration,
                                    capacity: session.capacity,
                                    isUnlimited: session.isUnlimited
                                };
                            }
                            
                            sessionGroups[key].push(session.date);
                        });

                        // Create logical sessions from groups
                        this.form.logicalSessions = [];
                        let sessionId = 1;

                        Object.keys(sessionGroups).forEach(key => {
                            const dates = sessionGroups[key].sort();
                            const props = sessionProps[key];

                            this.form.logicalSessions.push({
                                id: sessionId++,
                                time: props.time,
                                duration: props.duration,
                                capacity: props.capacity,
                                isUnlimited: props.isUnlimited,
                                dates: dates,
                                singleDate: dates.length === 1 ? dates[0] : ''
                            });
                        });
                    }

                    // Update legacy sessions for form submission
                    this.updateLegacySessions();
                },

                // Update legacy sessions array for form submission
                updateLegacySessions() {
                    this.form.sessions = [];
                    
                    if (this.form.workshopType === 'consecutive') {
                        // For consecutive workshops, create one session per consecutive block
                        this.form.consecutiveBlocks.forEach((block, blockIndex) => {
                            if (block.dates.length > 0) {
                                // Create one session for the entire consecutive block
                                const session = {
                                    date: block.dates[0], // Primary date (first date of the range)
                                    time: block.time,
                                    duration: block.duration,
                                    capacity: block.isUnlimited ? 0 : block.capacity,
                                    isUnlimited: block.isUnlimited,
                                    sessionDates: block.dates, // All dates in this consecutive block
                                    totalDays: block.dates.length
                                };
                                this.form.sessions.push(session);
                            }
                        });
                    } else if (this.form.workshopType === 'private') {
                        // For private workshops, create a single session without dates
                        this.form.sessions.push({
                            date: '', // No specific date for private workshops
                            time: '', // No specific time for private workshops
                            duration: this.form.privateDuration,
                            capacity: this.form.privateIsUnlimited ? 0 : this.form.privateCapacity,
                            isUnlimited: this.form.privateIsUnlimited
                        });
                    } else if (this.form.workshopType === 'custom') {
                        // For custom workshops, each logical session becomes one database row with multiple dates
                        this.form.logicalSessions.forEach(logicalSession => {
                            if (logicalSession.dates.length > 0) {
                                this.form.sessions.push({
                                    date: logicalSession.dates[0], // Primary date (first date)
                                    time: logicalSession.time,
                                    duration: logicalSession.duration,
                                    capacity: logicalSession.isUnlimited ? 0 : logicalSession.capacity,
                                    isUnlimited: logicalSession.isUnlimited,
                                    sessionDates: logicalSession.dates, // All dates for this session
                                    totalDays: logicalSession.dates.length
                                });
                            }
                        });
                    } else {
                        // For single and other workshop types, create individual sessions for each date
                        this.form.logicalSessions.forEach(logicalSession => {
                            logicalSession.dates.forEach(date => {
                                this.form.sessions.push({
                                    date: date,
                                    time: logicalSession.time,
                                    duration: logicalSession.duration,
                                    capacity: logicalSession.isUnlimited ? 0 : logicalSession.capacity,
                                    isUnlimited: logicalSession.isUnlimited
                                });
                            });
                        });
                    }
                },

                addSession() {
                    // Add a new logical session
                    const newSessionId = this.form.logicalSessions.length + 1;
                    this.form.logicalSessions.push({
                        id: newSessionId,
                        time: '',
                        duration: 2,
                        capacity: 20,
                        isUnlimited: false,
                        dates: [],
                        singleDate: ''
                    });
                },

                removeSession(index) {
                    this.form.logicalSessions.splice(index, 1);
                    this.updateLegacySessions();
                },

                addDateToSession(sessionIndex) {
                    // For single workshops, only allow one date per session
                    if (this.form.workshopType === 'single' && this.form.logicalSessions[sessionIndex].dates.length >= 1) {
                        return;
                    }
                    // Add a new date to the specified logical session
                    this.form.logicalSessions[sessionIndex].dates.push('');
                },

                removeDateFromSession(sessionIndex, dateIndex) {
                    this.form.logicalSessions[sessionIndex].dates.splice(dateIndex, 1);
                    this.updateLegacySessions();
                },

                setSingleDate(sessionIndex, dateValue) {
                    if (dateValue) {
                        // For single workshops, set the date directly in the dates array
                        this.form.logicalSessions[sessionIndex].dates = [dateValue];
                        this.updateLegacySessions();
                    }
                },

                updateSessionTime(sessionIndex) {
                    this.updateLegacySessions();
                },

                updateSessionDuration(sessionIndex) {
                    this.updateLegacySessions();
                },

                updateSessionCapacity(sessionIndex) {
                    this.updateLegacySessions();
                },

                duplicateLastSession() {
                    if (this.form.logicalSessions.length > 0) {
                        const lastSession = this.form.logicalSessions[this.form.logicalSessions.length - 1];
                        const duplicatedSession = {
                            id: this.form.logicalSessions.length + 1,
                            time: lastSession.time,
                            duration: lastSession.duration,
                            capacity: lastSession.capacity || 20,
                            isUnlimited: lastSession.isUnlimited || false,
                            dates: [],
                            singleDate: ''
                        };
                        this.form.logicalSessions.push(duplicatedSession);
                    }
                },

                clearAllSessions() {
                    if (confirm('Are you sure you want to clear all sessions?')) {
                        this.form.logicalSessions = [
                            {
                                id: 1,
                                time: '',
                                duration: 2,
                                capacity: 20,
                                isUnlimited: false,
                                dates: [],
                                singleDate: ''
                            }
                        ];
                        this.updateLegacySessions();
                    }
                },

                // Consecutive workshop block functions
                addConsecutiveBlock() {
                    const newBlockId = this.form.consecutiveBlocks.length + 1;
                    this.form.consecutiveBlocks.push({
                        id: newBlockId,
                        time: '',
                        duration: 2,
                        capacity: 20,
                        isUnlimited: false,
                        fromDate: '',
                        toDate: '',
                        dates: []
                    });
                },

                removeConsecutiveBlock(blockIndex) {
                    this.form.consecutiveBlocks.splice(blockIndex, 1);
                    this.updateConsecutiveSessions();
                },

                updateDateRange(blockIndex) {
                    const block = this.form.consecutiveBlocks[blockIndex];
                    
                    if (block.fromDate && block.toDate) {
                        // Generate consecutive dates from fromDate to toDate
                        const startDate = new Date(block.fromDate);
                        const endDate = new Date(block.toDate);
                        const dates = [];
                        
                        const currentDate = new Date(startDate);
                        while (currentDate <= endDate) {
                            dates.push(currentDate.toISOString().split('T')[0]);
                            currentDate.setDate(currentDate.getDate() + 1);
                        }
                        
                        block.dates = dates;
                        this.updateConsecutiveSessions();
                    }
                },

                updateConsecutiveSessions() {
                    // Update legacy sessions for form submission
                    this.updateLegacySessions();
                },

                async loadExistingImages() {
                    try {
                        const response = await fetch(`/api/workshops/${this.form.workshopId}/images`);
                        if (response.ok) {
                            const result = await response.json();
                            if (result.success && result.images) {
                                this.form.images = result.images.map(img => ({
                                    url: img.image_url,
                                    uploaded: true,
                                    existing: true
                                }));

                                const coverImage = result.images.find(img => img.is_cover);
                                if (coverImage) {
                                    this.form.coverImageIndex = result.images.indexOf(coverImage);
                                }
                            }
                        }
                    } catch (error) {
                        console.error('Error loading existing images:', error);
                    }
                },

                async handleFileSelect(event) {
                    const files = Array.from(event.target.files);
                    await this.processFiles(files);
                    event.target.value = '';
                },

                async handleFileDrop(event) {
                    event.target.classList.remove('dragover');
                    const files = Array.from(event.dataTransfer.files);
                    await this.processFiles(files);
                },

                async processFiles(files) {
                    const remainingSlots = 3 - this.form.images.length;
                    const filesToProcess = files.slice(0, remainingSlots);

                    const validFiles = filesToProcess.filter(file => {
                        const isValidType = file.type.startsWith('image/');
                        const isValidSize = file.size <= 2 * 1024 * 1024;

                        if (!isValidType) {
                            this.showError(`File "${file.name}" is not an image.`);
                            return false;
                        }

                        if (!isValidSize) {
                            this.showError(`File "${file.name}" exceeds 2MB limit.`);
                            return false;
                        }

                        return true;
                    });

                    if (validFiles.length === 0) {
                        return;
                    }

                    this.form.uploading = true;

                    try {
                        const formData = new FormData();
                        validFiles.forEach(file => {
                            formData.append('images[]', file);
                        });

                        const response = await fetch('/api/upload/images', {
                            method: 'POST',
                            body: formData
                        });

                        const result = await response.json();

                        if (result.success) {
                            result.images.forEach(imageUrl => {
                                this.form.images.push({
                                    url: imageUrl,
                                    uploaded: true
                                });
                            });

                            if (this.form.images.length === result.images.length) {
                                this.form.coverImageIndex = 0;
                            }

                            this.showSuccess(result.message);
                        } else {
                            this.showError(result.error || 'Upload failed');
                        }
                    } catch (error) {
                        console.error('Upload error:', error);
                        this.showError('Network error during upload');
                    } finally {
                        this.form.uploading = false;
                    }
                },

                async removeImage(index) {
                    const image = this.form.images[index];

                    if (image.uploaded && image.url && !image.existing) {
                        try {
                            const formData = new FormData();
                            formData.append('image_path', image.url);

                            await fetch('/api/upload/delete', {
                                method: 'DELETE',
                                body: formData
                            });
                        } catch (error) {
                            console.error('Error deleting image:', error);
                        }
                    }

                    this.form.images.splice(index, 1);

                    if (this.form.coverImageIndex >= this.form.images.length) {
                        this.form.coverImageIndex = Math.max(0, this.form.images.length - 1);
                    }
                },

                setCoverImage(index) {
                    this.form.coverImageIndex = index;
                },

                validateForm() {
                    // Reset errors
                    this.errors.name = false;
                    this.errors.privateDuration = false;
                    this.errors.privateCapacity = false;
                    this.errors.sessions = [];

                    let isValid = true;

                    // Validate workshop name (required)
                    if (this.form.name.trim() === '') {
                        this.errors.name = true;
                        isValid = false;
                    }
                    
                    // For private workshops, validate duration and capacity
                    if (this.form.workshopType === 'private') {
                        if (this.form.privateDuration <= 0) {
                            this.errors.privateDuration = true;
                            isValid = false;
                        }
                        if (!this.form.privateIsUnlimited && this.form.privateCapacity <= 0) {
                            this.errors.privateCapacity = true;
                            isValid = false;
                        }
                    } else {
                        // For other workshop types, validate sessions
                        this.form.sessions.forEach((session, index) => {
                            const sessionErrors = {
                                date: !session.date,
                                time: !session.time,
                                duration: session.duration <= 0
                            };
                            this.errors.sessions[index] = sessionErrors;
                            if (sessionErrors.date || sessionErrors.time || sessionErrors.duration) {
                                isValid = false;
                            }
                        });
                    }

                    return isValid;
                },

                isFormValid() {
                    return this.validateForm();
                },

                restrictToEnglishNumerals(event) {
                    const key = event.key;
                    const allowedKeys = ['Backspace', 'Tab', 'Delete', 'ArrowLeft', 'ArrowRight', 'ArrowUp', 'ArrowDown', 'Enter'];
                    
                    // Allow control keys
                    if (allowedKeys.includes(key) || event.ctrlKey || event.metaKey) {
                        return;
                    }
                    
                    // Only allow English numerals (0-9) and decimal point
                    if (!/^[0-9.]$/.test(key)) {
                        event.preventDefault();
                    }
                },

                scrollToFirstError() {
                    // Find first error element and scroll to it
                    let firstErrorElement = null;

                    if (this.errors.name) {
                        firstErrorElement = document.querySelector('input[x-model="form.name"]');
                    } else if (this.errors.privateDuration) {
                        firstErrorElement = document.querySelector('input[x-model="form.privateDuration"]');
                    } else if (this.errors.privateCapacity) {
                        firstErrorElement = document.querySelector('input[x-model="form.privateCapacity"]');
                    } else {
                        // Check for session errors
                        for (let i = 0; i < this.errors.sessions.length; i++) {
                            const sessionError = this.errors.sessions[i];
                            if (sessionError.date || sessionError.time || sessionError.duration) {
                                firstErrorElement = document.querySelector(`[data-session-index="${i}"]`);
                                break;
                            }
                        }
                    }

                    if (firstErrorElement) {
                        firstErrorElement.scrollIntoView({ 
                            behavior: 'smooth', 
                            block: 'center' 
                        });
                        firstErrorElement.focus();
                    }
                },

                saveDraft() {
                    this.submitFormWithStatus('draft');
                },

                submitForm() {
                    if (!this.validateForm()) {
                        this.scrollToFirstError();
                        this.showError('Please fill in all required fields.');
                        return;
                    }
                    this.submitFormWithStatus('published');
                },

                submitFormWithStatus(status) {
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = `/workshops/update/${this.form.workshopId}`;

                    this.appendFormField(form, 'name', this.form.name);
                    this.appendFormField(form, 'description', this.form.description);
                    this.appendFormField(form, 'price', this.form.price);
                    this.appendFormField(form, 'is_free', this.form.isFree);
                    this.appendFormField(form, 'max_students', this.form.isUnlimited ? 0 : this.form.maxStudents);
                    this.appendFormField(form, 'workshop_type', this.form.workshopType);
                    this.appendFormField(form, 'status', status);
                    this.appendFormField(form, 'location_name', this.form.locationName);
                    this.appendFormField(form, 'location_link', this.form.locationLink);

                    // Handle private workshop data separately
                    if (this.form.workshopType === 'private') {
                        this.appendFormField(form, 'session_date_0', '');
                        this.appendFormField(form, 'session_time_0', '');
                        this.appendFormField(form, 'session_duration_0', this.form.privateDuration);
                        this.appendFormField(form, 'session_capacity_0', this.form.privateIsUnlimited ? 0 : this.form.privateCapacity);
                    } else {
                        this.form.sessions.forEach((session, index) => {
                            this.appendFormField(form, `session_date_${index}`, session.date);
                            this.appendFormField(form, `session_time_${index}`, session.time);
                            this.appendFormField(form, `session_duration_${index}`, session.duration);
                            this.appendFormField(form, `session_capacity_${index}`, session.capacity || 20);
                            
                            // Add consecutive session fields if they exist
                            if (session.sessionDates && session.sessionDates.length > 1) {
                                this.appendFormField(form, `session_dates_${index}`, session.sessionDates.join(','));
                                this.appendFormField(form, `session_total_days_${index}`, session.totalDays);
                            }
                        });
                    }

                    this.form.images.forEach((image, index) => {
                        this.appendFormField(form, 'image_urls[]', image.url);
                    });
                    this.appendFormField(form, 'cover_image_index', this.form.coverImageIndex);

                    document.body.appendChild(form);
                    form.submit();
                },

                appendFormField(form, name, value) {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = name;
                    input.value = value;
                    form.appendChild(input);
                },

                showError(message) {
                    this.showNotification(message, 'error');
                },

                showSuccess(message) {
                    this.showNotification(message, 'success');
                },

                showNotification(message, type) {
                    const notification = document.createElement('div');
                    const bgColor = type === 'error' ? 'bg-red-500' : 'bg-green-500';

                    notification.className = `fixed top-4 right-4 ${bgColor} text-white px-6 py-3 rounded-lg shadow-lg z-50 transform transition-all duration-300`;
                    notification.style.transform = 'translateY(-100px)';
                    notification.innerHTML = `
                        <div class="flex items-center space-x-2">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                ${type === 'error'
                                    ? '<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>'
                                    : '<path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>'
                                }
                            </svg>
                            <span>${message}</span>
                        </div>
                    `;

                    document.body.appendChild(notification);

                    setTimeout(() => {
                        notification.style.transform = 'translateY(0)';
                    }, 100);

                    setTimeout(() => {
                        notification.style.transform = 'translateY(-100px)';
                        setTimeout(() => {
                            if (notification.parentElement) {
                                notification.parentElement.removeChild(notification);
                            }
                        }, 300);
                    }, 3000);
                }
            }
        }

        // VANILLA JS DELETE FUNCTION (the one that worked!)
        function deleteWorkshop() {
            console.log('=== VANILLA JS DELETE ===');

            // Get workshop ID from container
            const container = document.getElementById('workshop-container');
            const workshopId = container ? container.getAttribute('data-workshop-id') : null;

            console.log('Container found:', !!container);
            console.log('Workshop ID:', workshopId);

            if (!workshopId) {
                alert('ERROR: Workshop ID not found!');
                return;
            }

            // Get confirmation text
            const lang = document.documentElement.lang;
            const confirmText = lang === 'ar'
                ? 'هل أنت متأكد من حذف هذه الورشة؟ لا يمكن التراجع عن هذا الإجراء.'
                : 'Are you sure you want to delete this workshop? This action cannot be undone.';

            if (!confirm(confirmText)) {
                console.log('User cancelled deletion');
                return;
            }

            console.log('Making DELETE request to:', `/workshops/delete/${workshopId}`);

            // Make the DELETE request (same working code as before)
            fetch(`/workshops/delete/${workshopId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => {
                console.log('Response status:', response.status);
                console.log('Response ok:', response.ok);
                return response.text();
            })
            .then(data => {
                console.log('Response data:', data);

                if (data.includes('successfully') || data.includes('Workshop deleted')) {
                    const successMsg = lang === 'ar' ? 'تم حذف الورشة بنجاح' : 'Workshop deleted successfully';
                    alert(successMsg);
                    console.log('Redirecting to /workshops/reorder');
                    window.location.href = '/workshops/reorder?success=workshop_deleted';
                } else {
                    const errorMsg = lang === 'ar' ? 'فشل في حذف الورشة' : 'Failed to delete workshop';
                    alert(errorMsg + ': ' + data);
                }
            })
            .catch(error => {
                console.error('Fetch error:', error);
                const errorMsg = lang === 'ar' ? 'حدث خطأ أثناء الحذف' : 'Error occurred while deleting';
                alert(errorMsg + ': ' + error.message);
            });
        }

        // Keep your existing global functions
        function getErrorMessage(error) {
            const lang = document.documentElement.lang;
            const messages = {
                'name_required': {
                    'ar': 'اسم الورشة مطلوب',
                    'en': 'Workshop name is required'
                },
                'invalid_price': {
                    'ar': 'السعر غير صحيح',
                    'en': 'Invalid price'
                },
                'invalid_sessions': {
                    'ar': 'بيانات الجلسات غير صحيحة',
                    'en': 'Invalid session data'
                },
                'update_failed': {
                    'ar': 'فشل في تحديث الورشة',
                    'en': 'Failed to update workshop'
                },
                'workshop_not_found': {
                    'ar': 'الورشة غير موجودة',
                    'en': 'Workshop not found'
                }
            };

            return messages[error] ? messages[error][lang] : (lang === 'ar' ? 'حدث خطأ' : 'An error occurred');
        }

        function getSuccessMessage(success) {
            const lang = document.documentElement.lang;
            const messages = {
                'workshop_updated': {
                    'ar': 'تم تحديث الورشة بنجاح',
                    'en': 'Workshop updated successfully'
                },
                'draft_saved': {
                    'ar': 'تم حفظ المسودة بنجاح',
                    'en': 'Draft saved successfully'
                },
                'workshop_published': {
                    'ar': 'تم نشر الورشة بنجاح',
                    'en': 'Workshop published successfully'
                }
            };

            return messages[success] ? messages[success][lang] : (lang === 'ar' ? 'تم بنجاح' : 'Success');
        }

        function getDeleteConfirmText() {
            const lang = document.documentElement.lang;
            if (lang === 'ar') {
                return 'هل أنت متأكد من حذف هذه الورشة؟ لا يمكن التراجع عن هذا الإجراء.';
            }
            return 'Are you sure you want to delete this workshop? This action cannot be undone.';
        }

        function confirmDelete() {
            return confirm(getDeleteConfirmText());
        }

        // Make functions globally available
        window.getErrorMessage = getErrorMessage;
        window.getSuccessMessage = getSuccessMessage;
        window.getDeleteConfirmText = getDeleteConfirmText;
        window.confirmDelete = confirmDelete;
        window.deleteWorkshop = deleteWorkshop; // Add the delete function

        console.log('Workshop edit script with vanilla JS delete loaded successfully');
        </script>
    </body>
